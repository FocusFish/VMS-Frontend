{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/spec",
    "types": [
      "jasmine",
      "node"
    ],
    "paths": {
      "@data/*": ["src/app/data/*"],
      "@testing/*": ["src/testing/*"],
      "@app/*": ["src/app/*"],
      "@modules/*": ["src/app/modules/*"]
    },
    "resolveJsonModule": true
  },
  "files": [
    "test.ts",
    "polyfills.ts"
  ],
  "include": [
    "**/*.spec.ts",
    "**/*.d.ts"
  ]
}
